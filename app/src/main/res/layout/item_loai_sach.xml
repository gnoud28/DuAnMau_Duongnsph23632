<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#20C657">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/loaisach"
    android:id="@+id/img_anhLS"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_anhLS"
        android:layout_toLeftOf="@id/img_suaLS">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_maloai"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tenloai"/>
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/sua"
        android:id="@+id/img_suaLS"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_xoaLS"
        android:layout_marginRight="5dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:id="@+id/img_xoaLS"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"/>

</RelativeLayout>

</androidx.cardview.widget.CardView>